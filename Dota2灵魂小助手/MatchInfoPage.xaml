<Page x:Class="Dota2灵魂小助手.MatchInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Dota2灵魂小助手"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      xmlns:lvc="using:LiveCharts.Uwp"
      mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition x:Name="navigationTransition">
                <EntranceNavigationTransitionInfo />
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ThemeResource/ThemeDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Name="ShowCopySuccess">
                <DoubleAnimation From="0"
                                 To="1"
                                 Duration="00:00:0.2"
                                 Storyboard.TargetName="ShowSuccessScaleTransform"
                                 Storyboard.TargetProperty="ScaleY">
                    <DoubleAnimation.EasingFunction>
                        <BackEase Amplitude="0.2"
                                  EasingMode="EaseInOut" />
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <ScrollViewer x:Name="MatchInfoScrollViewer"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal"
                            Margin="0,2,0,0">
                    <Grid Margin="0,0,0,12">
                        <!--<Polygon Points="0,0,256,0,216,48,0,48" Fill="SaddleBrown" Margin="8,0"/>-->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xECCB;"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="16,0,-6,0" />
                            <TextBlock Text="比赛编号："
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="16,-2,0,0" />
                            <HyperlinkButton Click="HyperlinkButton_Click"
                                             ToolTipService.ToolTip="点击复制比赛编号">
                                <TextBlock x:Name="MatchIDTextBlock"
                                           Text="—"
                                           FontFamily="Consolas"
                                           FontSize="18"
                                           VerticalAlignment="Center" />
                            </HyperlinkButton>
                            <Grid x:Name="CopySuccessGrid"
                                  Height="32"
                                  Width="auto"
                                  Margin="32,0"
                                  Visibility="Collapsed">
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="ShowSuccessScaleTransform"
                                                    CenterY="16" />
                                </Grid.RenderTransform>
                                <Rectangle RadiusX="6"
                                           RadiusY="6"
                                           Fill="Gray"
                                           Opacity="0.1"
                                           Margin="-16,0" />
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Text="&#xE16F;"
                                           Opacity="0.9"
                                           VerticalAlignment="Center" />
                                <TextBlock FontSize="12"
                                           Text="已复制到剪切板"
                                           Margin="18,0"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <GridView Margin="12"
                          SelectionMode="None"
                          animations:ReorderGridAnimation.Duration="256"
                          HorizontalAlignment="Center"
                          IsItemClickEnabled="True"
                          ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <GridViewItem Height="64"
                                  Width="108">
                        <Grid Height="64"
                              Width="108">
                            <Rectangle Fill="Gray"
                                       Opacity="0.1" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="开始时间"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Opacity="0.7"
                                           Margin="6" />
                                <TextBlock x:Name="MatchData_BeginTimeTextBlock"
                                           Text="Loading..."
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem Height="64"
                                  Width="108">
                        <Grid Height="64"
                              Width="108">
                            <Rectangle Fill="Gray"
                                       Opacity="0.1" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="持续时间"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Opacity="0.7"
                                           Margin="6" />
                                <TextBlock x:Name="MatchData_GameTimeTextBlock"
                                           Text="Loading..."
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem Height="64"
                                  Width="108">
                        <Grid Height="64"
                              Width="108">
                            <Rectangle Fill="Gray"
                                       Opacity="0.1" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="第一滴血"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Opacity="0.7"
                                           Margin="6" />
                                <TextBlock x:Name="MatchData_FBTextBlock"
                                           Text="Loading..."
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem Height="64"
                                  Width="108">
                        <Grid Height="64"
                              Width="108">
                            <Rectangle Fill="Gray"
                                       Opacity="0.1" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Level"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Opacity="0.7"
                                           Margin="6" />
                                <TextBlock x:Name="MatchData_LevelTextBlock"
                                           Text="Loading..."
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GridViewItem>
                    <GridViewItem Height="64"
                                  Width="108">
                        <Grid Height="64"
                              Width="108">
                            <Rectangle Fill="Gray"
                                       Opacity="0.1" />
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="比赛模式"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           Opacity="0.7"
                                           Margin="6" />
                                <TextBlock x:Name="MatchData_GameModeTextBlock"
                                           TextWrapping="Wrap"
                                           Text="Loading..."
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GridViewItem>
                </GridView>
                <Grid>
                    <Rectangle Fill="ForestGreen"
                               Height="3"
                               Margin="148,0,16,0"
                               VerticalAlignment="Top"
                               Opacity="0.8" />
                    <Polygon Fill="ForestGreen"
                             Points="0,0,132,0,132,3,108,38,0,38"
                             Margin="16,0"
                             Opacity="0.8" />
                    <TextBlock FontSize="10"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="Radiant"
                               Margin="22,2" />
                    <TextBlock FontSize="16"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="天辉"
                               Margin="22,14,0,0" />
                    <TextBlock x:Name="RadiantWinTextBlock"
                               FontSize="21"
                               FontWeight="Black"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="..."
                               VerticalAlignment="Center"
                               Margin="64,0" />
                    <TextBlock x:Name="RadiantScoreTextBlock"
                               Opacity="0.8"
                               FontWeight="Bold"
                               FontSize="18"
                               Text="得分：Loading..."
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="72,0" />
                </Grid>
                <ProgressRing x:Name="RadiantProgressRing"
                              Height="36"
                              Width="36"
                              IsActive="True" />
                <ListView x:Name="RadiantListView"
                          ItemsSource="{x:Bind radiantPlayers}"
                          Width="586"
                          Margin="0,8"
                          SelectionChanged="RadiantListView_SelectionChanged"
                          ScrollViewer.VerticalScrollMode="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:PlayersInfoViewModel">
                            <Grid Height="72"
                                  Width="560"
                                  HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="204" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="0" />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.ColumnSpan="3"
                                           Grid.RowSpan="2"
                                           Margin="-48,2,-48,2"
                                           Fill="Gray"
                                           Opacity="0.1" />
                                <Image Grid.Column="0"
                                       Height="52"
                                       Margin="-4,4">
                                    <Image.Source>
                                        <BitmapImage UriSource="{x:Bind HeroPhoto}"
                                                     DecodePixelHeight="52"
                                                     DecodePixelType="Logical" />
                                    </Image.Source>
                                </Image>
                                <Grid Height="28"
                                      Width="28"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="-8,2">
                                    <Polygon Fill="Black"
                                             Opacity="0.8"
                                             Points="-8,21,24,-8,24,21" />
                                    <TextBlock Text="{x:Bind Level}"
                                               FontFamily="Arial"
                                               Foreground="White"
                                               FontSize="14"
                                               Opacity="0.7"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Grid>
                                <Grid Grid.Column="1"
                                      Margin="16,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2" />
                                        <RowDefinition Height="1.5*" />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="1"
                                               Foreground="{x:Bind Color}"
                                               FontWeight="Bold"
                                               Text="{x:Bind PlayerName,Mode=TwoWay}"
                                               FontSize="18"
                                               Opacity="0.8"
                                               VerticalAlignment="Bottom" />
                                    <TextBlock Grid.Row="2"
                                               Opacity="0.7"
                                               Text="{x:Bind Fight_rate}"
                                               FontSize="12"
                                               VerticalAlignment="Center" />
                                    <TextBlock Grid.Row="3"
                                               Opacity="0.7"
                                               Text="{x:Bind Damage_rate}"
                                               FontSize="12"
                                               VerticalAlignment="Center" />
                                </Grid>
                                <StackPanel Grid.Column="2"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                    <Grid Width="78">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0"
                                                   FontSize="11"
                                                   Opacity="0.5"
                                                   Text="{x:Bind LD}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom" />
                                        <TextBlock Grid.Row="1"
                                                   FontSize="15"
                                                   FontWeight="Bold"
                                                   Opacity="0.8"
                                                   Text="{x:Bind K_D_A}"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom" />
                                        <TextBlock Grid.Row="2"
                                                   FontSize="13"
                                                   Opacity="0.7"
                                                   Text="{x:Bind KDA}"
                                                   HorizontalAlignment="Left" />
                                    </Grid>
                                    <Grid Width="108"
                                          Margin="8,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Rectangle Grid.Column="0"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="1"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="2"
                                                   Grid.Row="0"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="0"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="1"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Rectangle Grid.Column="2"
                                                   Grid.Row="1"
                                                   Margin="1"
                                                   Fill="Gray"
                                                   Opacity="0.3" />
                                        <Image Grid.Column="0"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_0}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="1"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_1}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="2"
                                               Grid.Row="0"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_2}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="0"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_3}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="1"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_4}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                        <Image Grid.Column="2"
                                               Grid.Row="1"
                                               Stretch="Uniform"
                                               Margin="1">
                                            <Image.Source>
                                                <BitmapImage UriSource="{x:Bind Item_5}"
                                                             DecodePixelWidth="52"
                                                             DecodePixelType="Logical" />
                                            </Image.Source>
                                        </Image>
                                    </Grid>
                                    <Grid Margin="6,0">
                                        <TextBlock Text="?"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="36" />
                                        <Ellipse x:Name="PlayerPhotoEllipse"
                                                 Height="58"
                                                 Width="58"
                                                 Stroke="{ThemeResource SimpleColor}"
                                                 StrokeThickness="1.5">
                                            <Ellipse.Fill>
                                                <ImageBrush>
                                                    <ImageBrush.ImageSource>
                                                        <BitmapImage UriSource="{x:Bind PlayerPhoto,Mode=TwoWay}"
                                                                     DecodePixelHeight="58"
                                                                     DecodePixelType="Logical" />
                                                    </ImageBrush.ImageSource>
                                                </ImageBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Grid>
                                </StackPanel>
                                <!--<Rectangle Grid.Row="1" Grid.ColumnSpan="3" Fill="Gray" Opacity="0.3"/>-->
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Grid Margin="0,12,0,0">
                    <Rectangle Fill="Firebrick"
                               Height="3"
                               Margin="148,0,16,0"
                               VerticalAlignment="Top"
                               Opacity="0.8" />
                    <Polygon Fill="Firebrick"
                             Points="0,0,132,0,132,3,108,38,0,38"
                             Margin="16,0"
                             Opacity="0.8" />
                    <TextBlock FontSize="10"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="Dire"
                               Margin="22,2" />
                    <TextBlock FontSize="16"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="夜魇"
                               Margin="22,14,0,0" />
                    <TextBlock x:Name="DireWinTextBlock"
                               FontSize="21"
                               FontWeight="Black"
                               Foreground="{ThemeResource RegionBrush}"
                               Text="..."
                               VerticalAlignment="Center"
                               Margin="64,0" />
                    <TextBlock x:Name="DireScoreTextBlock"
                               Opacity="0.8"
                               FontWeight="Bold"
                               FontSize="18"
                               Text="得分：Loading..."
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="72,0" />
                </Grid>
                <ProgressRing x:Name="DireProgressRing"
                              Height="36"
                              Width="36"
                              IsActive="True" />
                <ListView x:Name="DireListView"
                          ItemsSource="{x:Bind direPlayers}"
                          Width="586"
                          Margin="0,8"
                          SelectionChanged="DireListView_SelectionChanged"
                          ScrollViewer.VerticalScrollMode="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:PlayersInfoViewModel">
                            <Grid Height="72"
                                  Width="560"
                                  HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="204" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="0" />
                                </Grid.RowDefinitions>
                                <Rectangle Grid.ColumnSpan="3"
                                           Grid.RowSpan="2"
                                           Margin="-48,2,-48,2"
                                           Fill="Gray"
                                           Opacity="0.1" />
                                <Image x:Name="DirePlayerImage"
                                       Grid.Column="0"
                                       Height="52"
                                       Margin="-4,4">
                                    <Image.Source>
                                        <BitmapImage UriSource="{x:Bind HeroPhoto}"
                                                     DecodePixelHeight="52"
                                                     DecodePixelType="Logical" />
                                    </Image.Source>
                                </Image>
                                <Grid Height="28"
                                      Width="28"
                                      HorizontalAlignment="Right"
                                      VerticalAlignment="Bottom"
                                      Margin="-8,2">
                                    <Polygon Fill="Black"
                                             Opacity="0.8"
                                             Points="-8,21,24,-8,24,21" />
                                    <TextBlock Text="{x:Bind Level}"
